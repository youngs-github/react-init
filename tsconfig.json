{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "importHelpers": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es2020"],
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "paths": {
      "*/": ["*/"]
    },
    "resolveJsonModule": true
  },
  "include": ["main", "utils", "types"],
  "exclude": ["node_modules"]
}
